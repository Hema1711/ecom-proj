<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :category_name, style: "display: block" %>
     <%= form.select(:category_id, Category.all.collect {|p| [p.category_name]},  {prompt: "Select category"}, {class: 'form-control'}) %>
  </div>

  <div>
    <%= form.label :product_name, style: "display: block" %>
    
    <%= form.select(:product_id, Product.all.collect {|p| [p.product_name, p.product_price]},  {prompt: "Select product"}, {class: 'form-control'}) %>

  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>



